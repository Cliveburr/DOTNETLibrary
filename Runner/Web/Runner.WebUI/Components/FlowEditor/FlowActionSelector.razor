@using Runner.Business.Entities.Node

@switch (Node.Type)
{
    case Business.Actions.ActionType.Script:
        <FlowActionScript Node=Node Parent=Parent />
        break;
    case Business.Actions.ActionType.Container:
        <FlowActionContainer Node=Node Parent=Parent />
        break;
    case Business.Actions.ActionType.Parallel:
        <FlowActionParallel Node=Node Parent=Parent />
        break;
}

@code {

    [Parameter]
    public required FlowAction Node { get; set; }

    [Parameter]
    public required IFlowActionView? Parent { get; set; }

}
