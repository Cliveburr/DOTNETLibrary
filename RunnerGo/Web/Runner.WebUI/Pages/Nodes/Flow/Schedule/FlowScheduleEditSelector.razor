@using Runner.Business.Entities.Job
@using Runner.Business.Model.Schedule

@if (Schedule.Selected is not null)
@switch (Schedule.Selected.JobSchedule.ScheduleType)
{
    case JobScheduleType.Single:
        <FlowScheduleSingleEdit Schedule=Schedule />
        break;
    case JobScheduleType.Interval:
        <FlowScheduleIntervalEdit Schedule=Schedule />
        break;
    case JobScheduleType.Daily:
        <FlowScheduleDailyEdit Schedule=Schedule />
        break;
}


@code {

    [Parameter]
    public required FlowSchedule Schedule { get; set; }
}
