<src:WindowBase x:Class="PasswordStore.WPF.Domain.DomainSubHotkeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:src="clr-namespace:PasswordStore.WPF"
        mc:Ignorable="d"
        Title="SubHotkey" Height="157.631" Width="180.449" WindowStartupLocation="CenterScreen" FontFamily="Constantia" FontSize="14" ResizeMode="NoResize" KeyDown="WindowBase_KeyDown">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Margin="3" Width="80" Click="btSave_Click">Save</Button>
            <Button Margin="3" Width="80" Click="btCancel_Click">Cancel</Button>
        </StackPanel>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <Label HorizontalContentAlignment="Center" FontSize="22">Press..</Label>
                <Label HorizontalContentAlignment="Center" FontSize="22" Content="{Binding SubHotKey}"></Label>
            </StackPanel>
        </Grid>
    </DockPanel>
</src:WindowBase>