<Window x:Class="PasswordStore.WPF.About.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Password Store" Height="300" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
  <Grid>
    <DockPanel>

      <Grid Margin="3" DockPanel.Dock="Bottom">
                <CheckBox x:Name="chDontShowAnymore" HorizontalAlignment="Left" IsChecked="{Binding DontShowAboutAnymore}" Checked="chDontShowAnymore_CheckedUnchecked" Unchecked="chDontShowAnymore_CheckedUnchecked">Don't show anymore</CheckBox>
        <Button x:Name="btClose" HorizontalAlignment="Right" Width="60" Click="btClose_Click">Close</Button>
      </Grid>

      <Label></Label>

    </DockPanel>
  </Grid>
</Window>
