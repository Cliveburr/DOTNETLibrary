<Window x:Class="PasswordStore.WPF.Password.OpenPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Passwords Authentication" Height="160" Width="400" FontSize="14" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" FontFamily="Constantia" Topmost="True">
  <Grid>
    <StackPanel Margin="6">

      <Label Margin="6">Password:</Label>
      <PasswordBox x:Name="txPassword" Margin="3" KeyUp="txPassword_KeyUp"></PasswordBox>

      <Rectangle Margin="6" Fill="Black" Height="1" />
      
      <Button Margin="6" HorizontalAlignment="Right" Width="80" Click="btOpen_Click">Open</Button>
      
    </StackPanel>
  </Grid>
</Window>
