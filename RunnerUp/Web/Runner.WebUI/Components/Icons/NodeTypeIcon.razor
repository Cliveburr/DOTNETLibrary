@namespace Runner.WebUI.Components
@using Runner.Application.Commands.Nodes.DTO

@switch (Type)
{
    case NodeTypeDTO.App:
        <i class="fa-solid fa-rocket" style="color: #0091c4"></i>
        break;
    case NodeTypeDTO.Folder:
        <i class="fa-solid fa-folder" style="color: #c4c400"></i>
        break;
    case NodeTypeDTO.AgentPool:
        <i class="fa-solid fa-hard-drive" style="color: #495b76"></i>
        break;
    case NodeTypeDTO.Agent:
        <i class="fa-solid fa-desktop" style="color: #c4c400"></i>
        break;
    case NodeTypeDTO.Flow:
        <i class="fa-solid fa-wind" style="color: #00a7c4"></i>
        break;
    case NodeTypeDTO.Run:
        <i class="fa-solid fa-person-running" style="color: #c4c400"></i>
        break;
    case NodeTypeDTO.DataType:
        <i class="fa-solid fa-superscript" style="color: #0009b7"></i>
        break;
    case NodeTypeDTO.Data:
        <i class="fa-solid fa-person-running" style="color: #c4c400"></i>
        break;
    default:
        <span>Invalid NodeType: @Type</span>
        break;
}

@code {

    [Parameter]
    public required NodeTypeDTO Type { get; set; }

}
