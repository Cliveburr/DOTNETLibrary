<Window x:Class="PasswordTextStore.WPF.Main.InputBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordTextStore.WPF.Main"
        mc:Ignorable="d"
        Title="InputBox" Height="124.719" Width="343.146" FontSize="14" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" FontFamily="Constantia">
    <Grid>
        <StackPanel>
            <Label x:Name="lbLabel" Margin="3"></Label>
            <TextBox x:Name="txText" Margin="3" KeyUp="txText_KeyUp"></TextBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Margin="3" HorizontalAlignment="Right" Width="80" Click="btYes_Click">Yes</Button>
                <Button Margin="3" HorizontalAlignment="Right" Width="80" Click="btNo_Click">No</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
